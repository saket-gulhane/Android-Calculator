<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    //calculator word
    <TextView
        android:id="@+id/calculatorText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:text="CALCULATOR"
        android:textSize="20dp"

        />

    //Expression input
    <EditText
        android:id="@+id/textOut"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@+id/calculatorText"
        android:textSize="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"

        />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            tools:context=".MainActivity">




            //1st row Buttons
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:weightSum="4"
                android:orientation="horizontal"
                tools:context=".MainActivity">

                <Button
                    android:id="@+id/button7"
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:text="7"
                    android:layout_marginLeft="5dp"

                    android:layout_weight="1"
                    />

                <Button  android:id="@+id/button8"
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:layout_toRightOf="@+id/button7"
                    android:text="8"
                    android:layout_weight="1"
                    />

                <Button  android:id="@+id/button9"
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:layout_toRightOf="@+id/button8"
                    android:text="9"
                    android:layout_weight="1"
                    />

                <Button  android:id="@+id/buttonDiv"
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:layout_toRightOf="@+id/button9"
                    android:text="/"
                    android:layout_weight="1"
                    />

            </LinearLayout>


            //2nd row Buttons
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:weightSum="4"
                android:orientation="horizontal"
                tools:context=".MainActivity">


                <Button  android:id="@+id/button4"
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:text="4"
                    android:layout_marginLeft="5dp"
                    />

                <Button  android:id="@+id/button5"
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:layout_toRightOf="@id/button4"
                    android:text="5"
                    />

                <Button  android:id="@+id/button6"
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:layout_toRightOf="@id/button5"
                    android:text="6"
                    />

                <Button  android:id="@+id/buttonMul"
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:layout_toRightOf="@+id/button6"
                    android:text="x"
                    />

            </LinearLayout>



            //3rd row Buttons
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:weightSum="4"
                android:orientation="horizontal"
                tools:context=".MainActivity">

                <Button  android:id="@+id/button1"
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="5dp"
                    android:text="1"
                    />

                <Button  android:id="@+id/button2"
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:layout_toRightOf="@id/button1"
                    android:text="2"
                    />

                <Button  android:id="@+id/button3"
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:layout_toRightOf="@id/button2"
                    android:text="3"
                    />

                <Button  android:id="@+id/buttonMinus"
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:layout_toRightOf="@id/button3"
                    android:text="-"
                    />
            </LinearLayout>

            //4th row Buttons
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:weightSum="4"
                android:orientation="horizontal"
                tools:context=".MainActivity">

                <Button
                    android:id="@+id/buttonBack"
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginLeft="5dp"
                    android:text="back" />

                <Button  android:id="@+id/button0"
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:text="0"
                    />

                <Button  android:id="@+id/buttonDecimal"
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:layout_toRightOf="@id/button0"
                    android:text="."
                    />

                <Button  android:id="@+id/buttonPlus"
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:layout_toRightOf="@id/buttonDecimal"
                    android:text="+"
                    />
            </LinearLayout>


            //5th Row Buttons
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="2"
                android:orientation="horizontal"
                tools:context=".MainActivity"
                android:layout_marginLeft="5dp">


                <Button
                    android:id="@+id/buttonC"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="1dp"
                    android:layout_weight="1"
                    android:text="C"

                    />


                <Button
                    android:id="@+id/buttonEqual"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:layout_weight="1"
                    android:text="=" />


            </LinearLayout>


            //6th row Buttons
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:gravity="center"
                tools:context=".MainActivity">

                <Button
                    android:id="@+id/buttonCopyText"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:text="Copy Text" />

            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            tools:context=".MainActivity"/>
        </LinearLayout>

    </ScrollView>

</LinearLayout>